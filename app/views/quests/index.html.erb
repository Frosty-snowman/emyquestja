<% content_for :title, "Quests" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>
<div class="flex justify-center items-center gap-8 mb-6">
<h1 class="font-bold text-4xl">Nattapat Pinrat</h1>
</div>
 <div class="flex justify-center items-center gap-6 mb-6 flex-wrap">
  <%= image_tag("frost1.jpg", alt: "Frosty banner 1", class: "rounded-xl w-[300px] shadow-lg") %>
  <%= image_tag("frost2.jpg", alt: "Frosty banner 2", class: "rounded-xl w-[300px] shadow-lg") %>
</div>

  <div class="flex justify-between items-center">
  <h2 class="font-bold text-4xl">My Academy Quests</h2>
  <div class="flex gap-2">
    <%= link_to "My Brag", brag_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
    <%= link_to "New quest", new_quest_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>
</div>

 <%= form_with url: destroy_multiple_quests_path, method: :delete, local: true do %>
  <%
=begin%>
 <div class="flex justify-end mb-4">
    <%= submit_tag "Delete Selected", class: "bg-red-600 hover:bg-red-500 text-white font-medium px-4 py-2 rounded-md", data: { turbo_confirm: "Are you sure you want to delete selected quests?" } %>
  </div> 
<%
=end%>

  <div id="quests" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @quests.any? %>
      <% @quests.each do |quest| %>
        <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
          <div class="flex items-center gap-3 w-full sm:w-auto">
            <%= check_box_tag "quest_ids[]", quest.id, false, class: "w-5 h-5 text-blue-600 rounded border-gray-300" %>
            <%= render quest %>
          </div>
          <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
            <%= link_to "Show", quest, class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
            <%= button_to "Destroy", quest, method: :delete, class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No quests found.</p>
    <% end %>
  </div>

<% end %>

