<% content_for :title, "Quests" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>
<div class="flex justify-center items-center gap-8 mb-6">
<h1 class="font-bold text-4xl">Nattapat Pinrat</h1>
</div>
 <div class="flex justify-center items-center gap-6 mb-6 flex-wrap">
  <%= image_tag("frost1.jpg", alt: "Frosty banner 1", class: "rounded-xl w-[300px] shadow-lg") %>
  <%= image_tag("frost2.jpg", alt: "Frosty banner 2", class: "rounded-xl w-[300px] shadow-lg") %>
</div>

  <div class="flex justify-between items-center">
  <h2 class="font-bold text-4xl">My Academy Quests</h2>
  <div class="flex gap-2">
    <%= link_to "My Brag", brag_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
    <%= link_to "New quest", new_quest_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>
</div>

  <div id="quests" class="min-w-full divide-y divide-gray-200 space-y-5">
  <% if @quests.any? %>
    <% @quests.each do |quest| %>
      <div class="flex items-center justify-between p-4 border rounded-lg">
        <div class="flex items-center gap-3">
          <%= form_with model: quest, url: quest_path(quest), method: :patch, local: true do |form| %>
            <%= form.check_box :completed, 
                onchange: "this.form.submit()", 
                checked: quest.completed,
                class: "mr-2" %>
          <% end %>
          <h2 class="<%= quest.completed ? 'line-through text-red-500' : 'text-gray-900' %>">
            <%= quest.name %>
          </h2>
        </div>
        
        <div class="flex gap-2">
          <%= link_to "Show", quest, class: "rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
          <%= button_to "Destroy", quest, method: :delete, class: "rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
        </div>
      </div>
    <% end %>
  <% else %>
    <p class="text-center my-10">No quests found.</p>
  <% end %>
</div>