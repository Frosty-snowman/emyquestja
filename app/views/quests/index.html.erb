<% content_for :title, "Quests" %>

<div class="w-full px-4 sm:px-6 lg:px-8 pt-2 sm:pt-4 min-h-screen ">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-3 sm:mb-5 text-green-500 font-medium rounded-md inline-block text-sm" id="notice"><%= notice %></p>
  <% end %>

  <!-- Header -->
  <div class="flex justify-center items-center gap-1 sm:gap-8 mb-3 sm:mb-6">
    <h1 class="font-bold text-3xl sm:text-4xl lg:text-5xl xl:text-6xl text-center text-gray-800">Nattapat Pinrat</h1>
  </div>

  <!-- Images -->
  <div class="flex justify-center items-center gap-3 sm:gap-6 mb-3 sm:mb-6 flex-wrap">
    <%= image_tag("frost1.jpg", alt: "Frosty banner 1", class: "rounded-xl w-[140px] sm:w-[200px] lg:w-[300px] shadow-lg") %>
  </div>

  <!-- Header Section -->
  <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center mb-3 sm:mb-6 gap-3 sm:gap-4">
    <h2 class="font-bold text-xl sm:text-2xl lg:text-4xl text-center sm:text-left text-gray-800">My Academy Quests</h2>
    <div class="flex justify-center sm:justify-end">
      <%= link_to "My Brag", brag_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
    </div>
  </div>

  <!-- Form à¸ªà¸³à¸«à¸£à¸±à¸šà¸ªà¸£à¹‰à¸²à¸‡ Quest à¹ƒà¸«à¸¡à¹ˆ -->
  <div class="mb-4 sm:mb-8">
    <%= form_with model: Quest.new, url: quests_path, method: :post, local: true, class: "flex flex-col sm:flex-row gap-3 sm:gap-4" do |form| %>
      <%= form.text_field :name, 
          placeholder: "âœ¨ à¹€à¸žà¸´à¹ˆà¸¡ Quest à¹ƒà¸«à¸¡à¹ˆ...", 
          class: "w-full sm:flex-1 sm:max-w-md px-4 py-3 rounded-lg border border-gray-300 bg-white text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent text-base" %>
      <%= form.submit "Add", 
          class: "w-full sm:w-auto px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg cursor-pointer transition-colors" %>
    <% end %>
  </div>

  <!-- à¸ªà¹ˆà¸§à¸™à¹à¸ªà¸”à¸‡ Quest à¸—à¸µà¹ˆà¸¡à¸µà¸­à¸¢à¸¹à¹ˆ -->
  <div id="quests" class="space-y-3 sm:space-y-5">
    <% if @quests.any? %>
      <% @quests.each do |quest| %>
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between p-4 bg-white border border-gray-200 rounded-lg gap-3 sm:gap-0 shadow-sm">
          <!-- Quest content -->
          <div class="flex items-center gap-3 flex-1">
            <%= form_with model: quest, url: quest_path(quest), method: :patch, local: true do |form| %>
              <%= form.check_box :completed, 
                  onchange: "this.form.submit()", 
                  checked: quest.completed,
                  class: "mr-2 h-5 w-5 sm:h-4 sm:w-4 flex-shrink-0" %>
            <% end %>
            <h2 class="<%= quest.completed ? 'line-through text-red-500' : 'text-gray-900' %> text-base sm:text-lg break-words">
              <%= quest.name %>
            </h2>
          </div>
          
          <!-- Action buttons -->
          <div class="flex gap-2 justify-end sm:justify-start">
            <%= button_to "ðŸ—‘ï¸", quest, method: :delete, class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-red-500 hover:bg-red-600 text-white font-medium cursor-pointer text-sm sm:text-base", data: { turbo_confirm: "Are you sure?" } %>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="text-center my-4 sm:my-10 bg-white rounded-lg p-6 shadow-sm">
        <p class="text-gray-500">No quests found!</p>
      </div>
    <% end %>
  </div>
</div>